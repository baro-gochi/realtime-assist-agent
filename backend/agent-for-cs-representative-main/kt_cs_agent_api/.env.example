# ============================================
# KT 상담원 AI Agent API - 환경 변수 설정 예시
# ============================================
# 이 파일을 복사하여 .env 파일로 사용하세요.
# cp .env.example .env

# --------------------------------------------
# [필수] OpenAI API 설정
# --------------------------------------------
# OpenAI API 키 (https://platform.openai.com/api-keys 에서 발급)
OPENAI_API_KEY=sk-<your-openai-api-key-here>

# --------------------------------------------
# [필수] 벡터 데이터베이스 설정
# --------------------------------------------
# ChromaDB 저장 경로 (절대 경로 권장)
# 예시: /data/chroma_db, /home/user/vector_db
CHROMA_DB_PATH=./chroma_db
# ChromaDB 컬렉션 이름
CHROMA_COLLECTION_NAME=kt_terms

# --------------------------------------------
# [선택] 임베딩 모델 설정
# --------------------------------------------
# HuggingFace 임베딩 모델명 (기본값: jhgan/ko-sroberta-multitask)
EMBEDDING_MODEL_NAME=jhgan/ko-sroberta-multitask

# # OpenAI 임베딩 모델명 (벡터 DB 생성 시 사용한 모델과 동일해야 함)
# EMBEDDING_MODEL_NAME=text-embedding-3-small

# 임베딩 모델 실행 디바이스 (cpu 또는 cuda)
EMBEDDING_DEVICE=cpu

# --------------------------------------------
# [선택] LLM 모델 설정
# --------------------------------------------
# 키워드 추출용 모델 (기본값: gpt-5-nano)
ANALYZER_MODEL=gpt-5-nano

# 응답 생성용 모델 (기본값: gpt-4o-mini)
RESPONSE_MODEL=gpt-4o-mini

# --------------------------------------------
# [선택] 서버 설정
# --------------------------------------------
# API 서버 호스트 (기본값: 0.0.0.0)
API_HOST=0.0.0.0

# API 서버 포트 (기본값: 8000)
API_PORT=8000

# 디버그 모드 (True/False, 기본값: False)
DEBUG=False

# --------------------------------------------
# [선택] 대기열 및 Rate Limiting 설정
# --------------------------------------------
# 최대 동시 요청 수 (기본값: 10)
MAX_CONCURRENT_REQUESTS=10

# 요청당 타임아웃 (초, 기본값: 60)
REQUEST_TIMEOUT=60

# Rate Limit - 분당 최대 요청 수 (기본값: 30)
RATE_LIMIT_PER_MINUTE=30

# --------------------------------------------
# [선택] 문서 레지스트리 설정
# --------------------------------------------
# 문서 매핑 JSON 파일 경로 (선택적)
# 미설정 시 기본 내장 레지스트리 사용
DOC_REGISTRY_PATH=

# --------------------------------------------
# [선택] 로깅 설정
# --------------------------------------------
# 로그 레벨 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 로그 파일 경로 (미설정 시 콘솔 출력만)
LOG_FILE_PATH=
